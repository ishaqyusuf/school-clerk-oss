{
  "extends": "@school-clerk/tsconfig/nextjs.json",
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@public": ["./public/*"],
      "@api/*": ["../api/src/*"],
      "@jobs/*": ["../../packages/jobs/src/*"]
    },
    "strict": false,
    "noImplicitAny": false
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../types",
    "next-env.d.ts",
    "next.config.js",
    "tailwind.config.ts",
    ".next/types/**/*.ts",
    "../../packages/ui/src/components/nav/mobile-menu.tsx"
  ],
  "exclude": ["node_modules", ".next"]
}
