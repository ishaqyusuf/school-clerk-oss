{
  "name": "@school-clerk/auth",
  "version": "1.0.0",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./middleware": "./src/middleware.ts",
    "./client": "./src/client.ts",
    "./env": "./env.ts"
  },
  "prisma": {
    "schema": "./src/schema"
  },
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "db:generate": "dotenv -e ../../.env -- bunx @better-auth/cli",
    "lint": "biome check .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@school-clerk/db": "workspace:*",
    "@school-clerk/utils": "workspace:*",
    "@next-auth/prisma-adapter": "^1.0.7",
    "better-auth": "1.3.27",
    "next-auth": "^4.24.11",
    "scrypt": "6.0.3"
  },
  "devDependencies": {
    "@better-auth/cli": "1.3.27",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.9.2"
  }
}
